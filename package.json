			"import": "./dist/src/concurrency/index.js"
		},
		"./errors": {
			"types": "./dist/src/errors/index.d.ts",
			"import": "./dist/src/errors/index.js"
		},
		"./formatters": {
			"types": "./dist/src/formatters/index.d.ts",
			"import": "./dist/src/formatters/index.js"
		},
		"./fs": {
			"types": "./dist/src/fs/index.d.ts",
			"import": "./dist/src/fs/index.js"
		},
		"./geo": {
			"types": "./dist/src/geo/index.d.ts",
			"import": "./dist/src/geo/index.js"
		},
		"./git": {
			"types": "./dist/src/git/index.d.ts",
			"import": "./dist/src/git/index.js"
		},
		"./glob": {
			"types": "./dist/src/glob/index.d.ts",
			"import": "./dist/src/glob/index.js"
		},
		"./hash": {
			"types": "./dist/src/hash/index.d.ts",
			"import": "./dist/src/hash/index.js"
		},
		"./html": {
			"types": "./dist/src/html/index.d.ts",
			"import": "./dist/src/html/index.js"
		},
		"./instrumentation": {
			"types": "./dist/src/instrumentation/index.d.ts",
			"import": "./dist/src/instrumentation/index.js"
		},
		"./logging": {
			"types": "./dist/src/logging/index.d.ts",
			"import": "./dist/src/logging/index.js"
		},
		"./mcp": {
			"types": "./dist/src/mcp/index.d.ts",
			"import": "./dist/src/mcp/index.js"
		},
		"./oauth": {
			"types": "./dist/src/oauth/index.d.ts",
			"import": "./dist/src/oauth/index.js"
		},
		"./password": {
			"types": "./dist/src/password/index.d.ts",
