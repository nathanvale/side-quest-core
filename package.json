{
	"name": "@side-quest/core",
	"version": "0.2.0",
	"description": "Shared utilities for Bun/TypeScript projects",
	"author": {
		"name": "Nathan Vale",
		"url": "https://github.com/nathanvale"
	},
	"license": "MIT",
	"type": "module",
	"exports": {
		"./cli": {
			"types": "./dist/src/cli/index.d.ts",
